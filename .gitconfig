[user]
	name = Phil Freo
	email = phil@philfreo.com

[color]
	ui = true
	pager = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta 
	old = red 
	new = green 

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[core]
	pager = less -FRSX
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore
	quotepath = false
	autocrlf = input
	editor = vim

[alias]
	st = status
	ci = commit
	ic = commit
	cia = commit -a
	cp = cherry-pick
	a = add
	d = diff
	dc = diff --cached
	rb = rebase
	br = branch
	#co = checkout
	co = "!f(){ git checkout \"$@\" && git submodule update --init --recursive --quiet; }; f"
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	unstage = reset HEAD
	subdate = submodule update --init --recursive --quiet
	sub = submodule update --init --recursive --quiet
	ca = commit --amend
	fix = commit -a --amend -C HEAD
	up = !sh -c 'git pull --rebase --prune && git log --pretty=format:\"%Cred%ae %Creset- %C(yellow)%s %Creset(%ar)\" HEAD@{1}..'
	mt = mergetool
	m = merge --no-ff
	pu = pull

	stup = !"git stash && git pl && git ps && git stash pop"
	ps = !"git push origin `git branch | sed -e '/^[^*]/d' -e 's/* \\(.*\\)/\\1/'`"
	pl = !"git pull --rebase origin `git branch | sed -e '/^[^*]/d' -e 's/* \\(.*\\)/\\1/'`"
	today = log --since=midnight --author='Phil Freo' --oneline --all
[merge]
	tool = opendiff
[push]
	default = simple
